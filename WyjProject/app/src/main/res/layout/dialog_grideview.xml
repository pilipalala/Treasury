<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_top"
        android:gravity="center"
        android:padding="10dp"
        android:text="GridView对话框"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <com.umeng.soexample.object.MyGridView
        android:id="@+id/dialog_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/dp_1"
        android:background="@drawable/bg_dialog_bot"
        android:listSelector="@color/white"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp_1" />


</LinearLayout>