<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_jiugongge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridView单/多选"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_popwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PopWindow"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_itemdecoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="吸顶效果" />

    <Button
        android:id="@+id/btn_textinputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextInputLayout" />

    <Button
        android:id="@+id/btn_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecycleView下拉刷新上拉加载" />


</LinearLayout>
